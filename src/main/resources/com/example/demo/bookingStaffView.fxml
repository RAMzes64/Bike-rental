<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox prefHeight="600.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controllers.bookingStaffController">
  <children>
    <SplitPane dividerPositions="0.2505567928730512" focusTraversable="true" prefHeight="600.0" prefWidth="900.0" VBox.vgrow="NEVER">
      <items>
        <AnchorPane prefHeight="535.0" prefWidth="222.0">
               <children>
                  <Button fx:id="rentBtn" layoutX="16.0" layoutY="15.0" mnemonicParsing="false" prefHeight="30.0" prefWidth="190.0" text="Аренда" />
                  <Button fx:id="profileBtn" layoutX="16.0" layoutY="102.0" mnemonicParsing="false" prefHeight="30.0" prefWidth="115.0" text="Профиль" />
                  <Button fx:id="exitBtn" layoutX="138.0" layoutY="102.0" mnemonicParsing="false" prefHeight="30.0" prefWidth="68.0" text="Выйти" textFill="#fafafa" />
                  <Button fx:id="bookingBtn" layoutX="16.0" layoutY="57.0" mnemonicParsing="false" onAction="#switchToBooking" prefHeight="30.0" prefWidth="190.0" text="Бронирование" />
               </children>
        </AnchorPane>
        <ScrollPane prefHeight="-1.0" prefWidth="-1.0">
               <content>
                  <AnchorPane prefHeight="600.0" prefWidth="670.0">
                     <children>
                        <ImageView fitHeight="150.0" fitWidth="170.0" layoutX="14.0" layoutY="14.0" pickOnBounds="true" preserveRatio="true" />
                        <TableView fx:id="bookingTable" layoutX="14.0" layoutY="64.0" prefHeight="255.0" prefWidth="634.0">
                          <columns>
                            <TableColumn fx:id="idClm" prefWidth="75.0" text="id" />
                            <TableColumn fx:id="clientIdClm" onEditCommit="#changeClientId" prefWidth="90.39990234375" text="Клиент" />
                              <TableColumn fx:id="bikemodelClm" onEditCommit="#changeBikeId" prefWidth="89.60011291503906" text="Модель" />
                              <TableColumn fx:id="shopIdClm" onEditCommit="#changeBikeId" prefWidth="102.40005493164062" text="Магазин" />
                              <TableColumn fx:id="dateClm" onEditCommit="#changeDateBegin" prefWidth="135.9998779296875" text="Дата начала" />
                              <TableColumn fx:id="payClm" onEditCommit="#changePaycheck" prefWidth="141.60009765625" text="Стоимость" />
                          </columns>
                        </TableView>
                        <Label layoutX="14.0" layoutY="14.0" text="Бронирование">
                           <font>
                              <Font size="26.0" />
                           </font>
                        </Label>
                        <Button fx:id="addBtn" layoutX="530.0" layoutY="405.0" mnemonicParsing="false" onAction="#addDataRow" text="Добавить" />
                        <TextField fx:id="clientIdField" layoutX="116.0" layoutY="359.0" onAction="#addDataRow" prefHeight="26.0" prefWidth="42.0" promptText="id Кл." />
                        <TextField fx:id="bikeIdField" layoutX="184.0" layoutY="360.0" onAction="#addDataRow" prefHeight="26.0" prefWidth="65.0" promptText="id Вел." />
                        <TextField fx:id="paycheckField" layoutX="530.0" layoutY="360.0" onAction="#addDataRow" prefHeight="26.0" prefWidth="115.0" promptText="предоплата" />
                        <Button fx:id="paycheckBtn" layoutX="422.0" layoutY="405.0" mnemonicParsing="false" text="Рассчитать" />
                        <Button fx:id="deleteBtn" layoutX="334.0" layoutY="405.0" mnemonicParsing="false" onAction="#deleteDataRow" text="Удалить" />
                        <DatePicker fx:id="dateBeginPick" layoutX="368.0" layoutY="360.0" onAction="#addDataRow" prefWidth="134.0" promptText="Дата " />
                        <TextField fx:id="bikeIdField1" layoutX="276.0" layoutY="359.0" onAction="#addDataRow" prefHeight="26.0" prefWidth="65.0" promptText="id Вел." />
                     </children>
                  </AnchorPane>
               </content>
        </ScrollPane>
      </items>
    </SplitPane>
  </children>
</VBox>
